# ============================================================
# SonarQube — Servidor
# ============================================================
SONAR_PORT=9000
SONAR_IMAGE=sonarqube:lts-community
SONAR_DB_IMAGE=postgres:15-alpine
SONAR_DB_USER=sonar
SONAR_DB_PASSWORD=sonar
SONAR_DB_NAME=sonarqube

# Credenciais de admin do SonarQube (usadas para gerar token e criar projetos)
SONAR_ADMIN_USER=admin
SONAR_ADMIN_PASSWORD=admin

# ============================================================
# Scanner — Configurações
# ============================================================
SONAR_HOST_URL=http://localhost:9000
SONAR_INTERNAL_URL=http://sonarqube:9000
SONAR_TOKEN=seu_token_aqui
SONAR_PROJECT_KEY=meu-projeto
SCANNER_IMAGE=quality-scanner:latest

# ============================================================
# API Lint — Validação de Contratos OpenAPI (Spectral)
# ============================================================
ENABLE_API_LINT=false
API_LINT_SEVERITY=warn
# Caminho manual para o arquivo OpenAPI (deixe vazio para auto-detect)
OPENAPI_FILE_PATH=

# ============================================================
# Dashboard
# ============================================================
DASHBOARD_PORT=3000
REPORTS_DIR=./reports

# URL pública do SonarQube (usada no dashboard para gerar links clicáveis)
SONAR_PUBLIC_URL=http://localhost:9000
