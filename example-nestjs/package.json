{
  "name": "example-nestjs-sonar",
  "version": "1.0.0",
  "description": "Exemplo NestJS para teste de cobertura SonarQube",
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "jest --coverage --verbose"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.0",
    "sonar-scanner": "^3.1.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.module.ts",
      "!src/main.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": ["text", "text-summary", "lcov", "clover"],
    "testEnvironment": "node"
  }
}
