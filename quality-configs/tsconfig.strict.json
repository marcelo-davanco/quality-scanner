{
  "// INSTRUCTION": "Merge these options into the real project's tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "// Already enabled by strict: true": "",
    "// strictNullChecks": true,
    "// strictFunctionTypes": true,
    "// strictBindCallApply": true,
    "// strictPropertyInitialization": true,
    "// noImplicitAny": true,
    "// noImplicitThis": true,
    "// alwaysStrict": true,
    "// Recommended extras â€” enable gradually": "",
    "noUncheckedIndexedAccess": true,
    "// Forces undefined check when accessing arrays/objects by index": "",
    "// Example: const item = arr[0]; // type will be T | undefined instead of T": "",
    "noPropertyAccessFromIndexSignature": true,
    "// Forces bracket notation for index signatures": "",
    "// Example: obj['key'] instead of obj.key when type is { [key: string]: T }": "",
    "exactOptionalPropertyTypes": true,
    "// Differentiates between 'prop?: string' (absent) and 'prop: string | undefined'": "",
    "noImplicitReturns": true,
    "// Error if a function branch does not return a value": "",
    "noFallthroughCasesInSwitch": true,
    "// Error if a switch case has no break/return": "",
    "noImplicitOverride": true,
    "// Forces use of 'override' keyword when overriding parent class methods": "",
    "forceConsistentCasingInFileNames": true,
    "// Prevents imports with casing different from the actual file": "",
    "isolatedModules": true,
    "// Ensures compatibility with transpilers (ts-jest, esbuild, swc)": ""
  }
}